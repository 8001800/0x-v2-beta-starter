{
    "name": "0x-v2-beta-starter-project",
    "version": "0.0.1",
    "main": "lib/scenarios/fill_order.js",
    "engines": {
        "node": ">=6.12"
    },
    "description": "0x v2 beta",
    "scripts": {
        "lint": "tslint --project . --exclude **/src/contract_wrappers/**/*",
        "watch_without_deps": "yarn pre_build && tsc -w",
        "build": "yarn pre_build && tsc",
        "pre_build": "run-s generate_contract_wrappers copy_artifacts",
        "clean": "shx rm -rf lib artifacts src/contract_wrappers",
        "copy_artifacts": "copyfiles -u 1 './src/artifacts/**/*' ./lib",
        "test": "yarn run_mocha",
        "rebuild_and_test": "run-s build test",
        "run_mocha": "mocha --require source-map-support/register --require make-promises-safe lib/test/**/*_test.js lib/test/global_hooks.js --bail --exit --timeout 10000",
        "generate_contract_wrappers": "abi-gen --abis ${npm_package_config_abis} --template ./contract_templates/contract.handlebars --partials './contract_templates/partials/**/*.handlebars' --output src/contract_wrappers --backend ethers"
    },
    "config": {
        "abis": "./src/artifacts/@(ERC20Proxy|ERC721Proxy|Exchange|WETH9|ZRXToken).json"
    },
    "author": "",
    "license": "Apache-2.0",
    "dependencies": {
        "@0xproject/abi-gen": "^0.3.2",
        "@0xproject/base-contract": "^0.3.4",
        "@0xproject/sol-compiler": "^0.5.2",
        "@0xproject/subproviders": "^0.10.4",
        "@0xproject/tslint-config": "^0.4.20",
        "@0xproject/order-utils": "^0.0.7",
        "@0xproject/types": "^0.8.1",
        "@0xproject/typescript-typings": "^0.4.1",
        "@0xproject/utils": "^0.7.1",
        "@0xproject/web3-wrapper": "^0.7.1",
        "@types/mocha": "^5.2.2",
        "copyfiles": "^2.0.0",
        "ethereum-types": "^0.0.2",
        "ethers": "3.0.22",
        "lodash": "^4.17.4",
        "run-s": "^0.0.0",
        "web3-provider-engine": "^14.0.4"
    },
    "devDependencies": {
        "@0xproject/dev-utils": "^0.4.4",
        "chai": "^4.0.1",
        "chai-as-promised": "^7.1.0",
        "chai-bignumber": "^2.0.1",
        "dirty-chai": "^2.0.1",
        "make-promises-safe": "^1.1.0",
        "npm-run-all": "^4.1.2",
        "shx": "^0.2.2",
        "tslint": "5.8.0",
        "typescript": "2.7.1"
    }
}
